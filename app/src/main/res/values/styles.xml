<resources>
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textColorPrimary">@color/black_333</item>
        <item name="android:textColorSecondary">@color/gray_bg</item>
    </style>

    <!--FullscreenDialog Theme-->
    <style name="FullscreenDialogTheme1" parent="@android:style/Theme.Material.Light.DialogWhenLarge">
        <!--状态栏颜色-->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!--是否有标题 -->
        <item name="android:windowNoTitle">true</item>

        <!--出入动画-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!--FullscreenDialog Theme-->
    <style name="FullscreenDialogTheme2" parent="@android:style/Theme.Material.Light.DialogWhenLarge">
        <!--状态栏颜色-->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!--是否有标题 -->
        <item name="android:windowNoTitle">true</item>

        <!--出入动画-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

        <!--是否有背景-->
        <item name="android:windowNoDisplay">true</item>
        <!--是否透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否昏暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--背景颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!--是否有边框-->
        <!--<item name="android:windowFrame">@null</item>-->
        <!--是否覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>

        <!--点外边可以消失-->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!--FullscreenDialog Theme-->
    <style name="FullscreenDialogTheme3" parent="@android:style/Theme.Material.Light.DialogWhenLarge">
        <!--状态栏颜色-->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!--是否有标题 -->
        <item name="android:windowNoTitle">true</item>

        <!--出入动画-->
        <item name="android:windowAnimationStyle">@style/DialogAnim</item>

        <!--是否有背景-->
        <item name="android:windowNoDisplay">true</item>
        <!--是否透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否昏暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--背景颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--FullscreenDialog anim-->
    <style name="DialogAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/in_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/out_top_to_bottom</item>
    </style>

    <!--Toolbar Theme-->
    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Back Back Icon Color-->
        <item name="android:colorControlNormal">@color/white</item>
        <!--Title Color-->
        <item name="android:textColorPrimary">@color/black</item>

        <!--Toolbar Menu Icon Color-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!--Toolbar Menu Theme-->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--Toolbar Menu Background Color-->
        <item name="android:colorBackground">@color/white</item>
        <!--New One Item Set Menu Down-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--false:Set Menu Down Toolbar-->
        <item name="overlapAnchor">false</item>
    </style>

    <!--TabLayoutText Theme-->
    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <!--Text Size-->
        <!--<item name="android:textSize">@dimen/text_size_12sp</item>-->
        <!--Small Letter-->
        <item name="textAllCaps">false</item>
    </style>

    <!--TextInputLayout Theme-->
    <style name="TextInputLayoutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:colorControlNormal">@color/gray_bg</item>
    </style>

    <!--EditText Theme-->
    <style name="EditTextTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/black_333</item>
    </style>

    <!--EditText Theme-->
    <style name="EditTextTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/red_bg</item>
        <item name="android:colorControlNormal">@color/black_666</item>
    </style>

    <!--EditText Theme-->
    <style name="EditTextTheme3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/green_text</item>
        <item name="android:colorControlNormal">@color/black_999</item>
    </style>

    <!--SeekBar Theme-->
    <style name="SeekBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:colorControlNormal">@color/pink</item>
    </style>

    <!--Button Theme-->
    <style name="ButtonTheme1" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/yellow</item>
    </style>

    <!--Button Theme-->
    <style name="ButtonTheme2" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/pink</item>
    </style>

    <!--Button Theme-->
    <style name="ButtonTheme3" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/purple</item>
    </style>

    <!--SwitchCompat Theme-->
    <style name="SwitchCompatTheme1" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/yellow</item>
    </style>

    <!--SwitchCompat Theme-->
    <style name="SwitchCompatTheme2" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/pink</item>
    </style>

    <!--SwitchCompat Theme-->
    <style name="SwitchCompatTheme3" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/purple</item>
    </style>

</resources>
